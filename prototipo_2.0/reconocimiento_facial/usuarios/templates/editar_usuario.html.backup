{% extends 'base.html' %}
{% load static %}

{% block title %}Editar Usuario{% endblock %}

{% block extra_css %}
<style>
    /* Eliminar padding del wrapper */
    #page-content-wrapper {
        padding: 0 !important;
    }

    /* CREDENCIAL INACAP (Modal) */
    .credencial-card {
        max-width: 450px;
        margin: 0 auto;
        background: linear-gradient(135deg, #de4949 0%, #b82020 50%, #800000 100%);
        border-radius: 20px;
        padding: 35px;
        color: white;
        box-shadow: 0 15px 50px rgba(222, 73, 73, 0.5);
    }

    .credencial-header {
        text-align: center;
        font-size: 32px;
        font-weight: 800;
        margin-bottom: 25px;
        text-transform: uppercase;
        letter-spacing: 3px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .credencial-foto {
        width: 220px;
        height: 220px;
        border-radius: 15px;
        object-fit: cover;
        display: block;
        margin: 0 auto 25px;
        border: 5px solid white;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
    }

    .credencial-info {
        background: rgba(255, 255, 255, 0.18);
        padding: 22px;
        border-radius: 12px;
        margin-bottom: 25px;
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .credencial-info h3 {
        margin: 0 0 18px 0;
        font-size: 24px;
        font-weight: 700;
        text-align: center;
    }

    .credencial-info p {
        margin: 10px 0;
        font-size: 17px;
        display: flex;
        justify-content: space-between;
    }

    .credencial-info p strong {
        color: white;
    }

    .credencial-actions {
        display: flex;
        gap: 12px;
        justify-content: center;
    }

    .credencial-actions .btn {
        flex: 1;
        font-weight: 600;
        padding: 12px;
        font-size: 1rem;
    }

    #credencialModal .modal-content {
        background: transparent;
        border: none;
    }

    /* Header rojo INACAP */
    .page-header {
        background: linear-gradient(90deg, #de4949, #b82020, #800000);
        color: white;
        padding: 30px 40px;
        margin: 0;
        box-shadow: 0 4px 15px rgba(222, 73, 73, 0.3);
    }

    /* Formulario */
    .form-container {
        max-width: 800px;
        margin: 30px auto;
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    /* Foto actual */
    .foto-actual {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 15px;
        border: 3px solid #de4949;
        margin: 0 auto 20px;
        display: block;
    }

    /* Bot√≥n cambiar foto */
    .btn-cambiar-foto {
        background: linear-gradient(90deg, #28a745, #218838);
        color: white;
        border: none;
        padding: 12px 25px;
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .btn-cambiar-foto:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(40, 167, 69, 0.4);
        color: white;
    }

    /* Loader de c√°mara */
    #cameraLoader {
        display: none;
        text-align: center;
        margin: 20px 0;
    }

    .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #de4949;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite;
        margin: 0 auto 15px;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loader-text {
        font-size: 1.1rem;
        color: #de4949;
        font-weight: 600;
    }

    /* Stream container */
    #streamContainer {
        display: none;
        margin: 20px 0;
        text-align: center;
    }

    #streamImage {
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-capturar {
        background: linear-gradient(90deg, #dc3545, #c82333);
        color: white;
        border: none;
        padding: 15px 30px;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 10px;
        margin-top: 15px;
    }
</style>
{% endblock %}

{% block content %}
<!-- Header -->
<div class="page-header">
    <h1>
        <i class="bi bi-person-gear"></i>
        Editar Usuario
    </h1>
</div>

<!-- Formulario -->
<div class="form-container">
    <h3 class="text-center mb-4">Datos del Usuario</h3>

    <!-- Foto Actual -->
    <div class="text-center mb-4">
        <img id="fotoActual" src="{{ usuario.imagen }}" class="foto-actual" alt="Foto actual">
        <button type="button" id="btnCambiarFoto" class="btn btn-cambiar-foto mt-3">
            <i class="bi bi-camera"></i> Cambiar Foto de Perfil
        </button>
    </div>

    <!-- Loader de c√°mara (oculto inicialmente) -->
    <div id="cameraLoader">
        <div class="spinner"></div>
        <p class="loader-text">‚è±Ô∏è Cargando c√°mara...</p>
    </div>

    <!-- Stream RTSP limpio (oculto inicialmente) -->
    <div id="streamContainer">
        <img id="streamImage" src="{% url 'luckfox_stream_limpio' %}" alt="Stream RTSP">
        <br>
        <button type="button" id="btnCapturar" class="btn btn-capturar">
            <i class="bi bi-camera-fill"></i> Capturar Foto
        </button>
        <div class="credencial-header">INACAP</div>
        <img id="credencialFoto" class="credencial-foto" src="" alt="Foto de perfil" />
        <div class="credencial-info">
            <h3 id="credencialNombre">{{ usuario.nombre }}</h3>
            <p><strong>RUT:</strong> <span id="credencialRut">{{ usuario.rut }}</span></p>
            <p><strong>Carrera:</strong> <span id="credencialCarrera">{{ usuario.carrera }}</span></p>
            <p><strong>Jornada:</strong> <span id="credencialJornada">{{ usuario.jornada }}</span></p>
        </div>
        <div class="credencial-actions">
            <button id="btnRetomar" class="btn btn-warning">
                <i class="bi bi-arrow-counterclockwise"></i> Volver a Tomar
            </button>
            <button id="btnAceptar" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Aceptar y Guardar
            </button>
        </div>
    </div>
</div>
</div>
</div>
{% endblock %}

{% block extra_js %}
<script>
    let fotoCapturada = null;
    const rut = "{{ rut }}";

    // Mostrar stream con loader
    document.getElementById('btnCambiarFoto').addEventListener('click', () => {
        // Mostrar loader
        document.getElementById('cameraLoader').style.display = 'block';
        document.getElementById('streamContainer').style.display = 'none';

        // Despu√©s de 2 segundos ocultar loader y mostrar stream
        setTimeout(() => {
            document.getElementById('cameraLoader').style.display = 'none';
            document.getElementById('streamContainer').style.display = 'block';
            document.getElementById('streamImage').src = "{% url 'luckfox_stream_limpio' %}?" + new Date().getTime();
        }, 2000);
    });

    // Cancelar captura
    document.getElementById('btnCancelar').addEventListener('click', () => {
        document.getElementById('streamContainer').style.display = 'none';
    });

    // Capturar foto
    document.getElementById('btnCapturar').addEventListener('click', async () => {
        try {
            console.log('üì∏ Capturando foto...');

            const response = await fetch('/api/luckfox/capturar_foto/', {
                method: 'POST',
                headers: {
                    'X-CSRFToken': '{{ csrf_token }}'
                }
            });

            const data = await response.json();

            if (data.success) {
                console.log('‚úÖ Foto capturada');
                fotoCapturada = data.imagen;

                // Ocultar stream
                document.getElementById('streamContainer').style.display = 'none';

                // Mostrar credencial con la nueva foto
                document.getElementById('credencialFoto').src = fotoCapturada;

                // Formatear jornada correctamente 
                const jornada = "{{ usuario.jornada }}";
                document.getElementById('credencialJornada').textContent = jornada === 'D' ? 'Diurna' : 'Vespertina';

                // Abrir modal
                const modal = new bootstrap.Modal(document.getElementById('credencialModal'));
                modal.show();
            } else {
                alert('Error al capturar foto: ' + (data.error || 'Desconocido'));
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error al capturar foto');
        }
    });

    // Retomar foto
    document.getElementById('btnRetomar').addEventListener('click', () => {
        // Cerrar modal
        bootstrap.Modal.getInstance(document.getElementById('credencialModal')).hide();

        // Mostrar loader y luego stream
        document.getElementById('cameraLoader').style.display = 'block';

        setTimeout(() => {
            document.getElementById('cameraLoader').style.display = 'none';
            document.getElementById('streamContainer').style.display = 'block';
            document.getElementById('streamImage').src = "{% url 'luckfox_stream_limpio' %}?" + new Date().getTime();
        }, 2000);
    });

    // Aceptar y guardar
    document.getElementById('btnAceptar').addEventListener('click', async () => {
        try {
            console.log('üíæ Guardando foto...');

            const response = await fetch(`/api/usuarios/${rut}/actualizar_foto/`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRFToken': '{{ csrf_token }}'
                },
                body: JSON.stringify({
                    imagen_base64: fotoCapturada
                })
            });

            const data = await response.json();

            if (data.success) {
                alert('‚úÖ Foto actualizada exitosamente');

                // Cerrar modal
                bootstrap.Modal.getInstance(document.getElementById('credencialModal')).hide();

                // Actualizar foto actual
                document.getElementById('fotoActual').src = fotoCapturada;
            } else {
                alert('Error al guardar: ' + (data.error || 'Desconocido'));
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error al guardar foto');
        }
    });
</script>
{% endblock %}